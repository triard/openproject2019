<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ImageViewFavorite"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_margin="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextViewNamaFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="nama club"
                android:textSize="15dp"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/TextViewAsalFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="asal favorite"
                android:textSize="10dp"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/TextViewAlternate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="alternate club"
                android:textSize="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/TextViewLegaue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="liga club"
                android:textSize="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/TextViewStadium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="stadium club"
                android:textSize="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/TextViewSince"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="since club"
                android:textSize="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/TextViewDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="desc club"
                android:textSize="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/TextViewIdTeamfav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="id club"
                android:textSize="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/TextViewIdLigafav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="id liga"
                android:textSize="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="gone"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>